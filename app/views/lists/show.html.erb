<%= stylesheet_link_tag    'lists/wizard', media: 'all', 'data-turbolinks-track': 'reload' %>
<section class="text-center wizard">
  <div class="container">
    <div class="tab-list wizard">
    </div>
  </div>
</section>
<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading"><%= @list.name %></h1>
    <p>
      <%= link_to new_list_product_item_path(@list), { class: 'btn btn-primary my-2' } do %>
        <span>Adicionar seus produtos <%= fa_icon 'angle-double-right' %></span>
      <% end %>
    </p>
  </div>
</section>

<div class="album py-5 bg-light">
  <div class="container">
    <h3 class="  text-center">Produtos</h3>
    <div class="row" id="product-item">
      <%= render 'product_items' %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div id="paginator">
      <%= paginate @product_items, remote: true, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm", nav_class: "d-inline-b" %>
    </div>
  </div>
  <div class="pb-2 pl-5">
    <div class="row justify-content-center">
      <span class="pt-2 pr-5 pl-2 pager-info ">
          <%= "Visualizando #{@product_items.current_page} - #{@product_items.total_pages}  de #{@list.product_items_count}
            registros" %>
        </span>
    </div>
  </div>

</div>